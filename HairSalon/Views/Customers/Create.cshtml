@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model HairSalon.Models.Customer
<div style="width:700px">
  @using (Html.BeginForm())
  {
    <div class="form-group">
      <div class="row">
        <div class="col">
          <label for="FirstName">First Name</label>
          @Html.TextBoxFor(model => model.FirstName, new {@class = "form-control", required = "required"})
        </div>
        <div class="col">
          <label for="FirstName">Last Name</label>
          @Html.TextBoxFor(model => model.LastName, new {@class = "form-control", required = "required"})
        </div>
        <div class="col">
          <label for="StylistId">Stylist</label>
          @Html.DropDownList("StylistId", @ViewBag.Stylists as List<SelectListItem>, "Select Stylist",new { @class = "form-control"})
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col-4">
          <label for="PhoneNumber">Phone Number</label>
          @Html.TextBoxFor(model => model.Phone, new {@class = "form-control", type="number", min=0})
        </div>
        <div class="col-8">
          <label for="Email">Email</label>
          @Html.TextBoxFor(model => model.Email, new {@class = "form-control", type="email", @required = "required"})
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col">
          <label for="Birthday">Birthday</label>
          @Html.TextBoxFor(model => model.Birthday, new {@class = "form-control", type="date"})
        </div>
        <div class="col">
          <label for="PreferredCut">Preferred Cut</label>
          @Html.TextBoxFor(model => model.PreferredCut, new {@class = "form-control"})
        </div>
        <div class="col">
          <label for="TimesVisited">Number of Previous Visits</label>
          @Html.TextBoxFor(model => model.TimesVisited, new {@class = "form-control", type="number"})
        </div>
      </div>
    </div>

    <input type="submit" value="Add new customer" class="btn btn-light schedule-day-of-week-label" />
  }
</div>