@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.HaircutType>;

@if (@Model.Count == 0)
{
  <h3>No stylists have been added yet!</h3>
}
@for (int x = 0; x < @Model.Count; x++)
{
  if (x == 0 || (x % 3 == 0))
  {
    @:<div class="row">
  }
    <div class="col-4">
      <div class="card stylist-cards">
        <div class="card-body">
          <h3 class="card-title text-center">
            @Model[x].Name
          </h3>
          <hr>
          <div class="row">
            <div class="col-6">
              <strong>Cost</strong><br>$@Model[x].Cost
            </div>
            <div class="col-6 text-end">
              <strong>Time Estimate</strong><br>@Model[x].TimeEstimate minutes
            </div>
          </div>
        </div>
        <div class="card-header text-center bottom-of-stylist-cards"><a class="btn btn-light salon-button" href='stylists/details/'>Modify</a></div>
      </div>
    </div>

  if ((x+1) % 3 == 0)
  {
    @:</div>
  }
}